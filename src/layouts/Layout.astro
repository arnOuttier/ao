---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );

    --clr_primary: #001d26;
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }

  body {
    overflow-x: hidden;
    margin: 0;

    display: grid;
    row-gap: 6rem;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  /* Buttons */

  button,
  .btn {
    cursor: pointer;
    color: inherit;
    border: 0;
    background-color: transparent;
    font-size: 0.875rem;
    line-height: 1.5;
    text-align: center;
    border-radius: 0.375rem;
    transition: all 0.4s ease;
  }

  .btn-primary {
    padding-block: 1rem;
    background-color: rgb(244, 244, 245);
    font-weight: 500;

    &:hover {
      background-color: rgb(229, 231, 235);
      color: rgb(20, 184, 166);
    }
  }

  .btn-secondary {
    padding: 0.5rem 1rem;

    font-weight: 600;
    background-color: var(--clr_primary);
    color: #fff;

    &:hover {
      opacity: 0.9;
    }
  }

  /* Inputs */

  input {
    font-size: 0.875rem;
    line-height: 1.5rem;
    padding: 0.5rem;
    border: 1px solid rgba(42, 39, 39, 0.1);
    border-radius: 0.375rem;
    color: rgba(42, 39, 39, 0.5);
    box-shadow: rgba(39, 39, 42, 0.05) 0 4px 6px -1px;

    flex-grow: 1;

    &::placeholder {
      color: rgba(42, 39, 39, 0.3);
    }
  }
</style>
