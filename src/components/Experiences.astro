---
const allExperiences = await Astro.glob("../content/experiences/*.md");
---

<section id="experiences">
  {
    allExperiences.map((experience) => (
      <article>
        <time>
          {experience.frontmatter.startMonthjob} -
          {experience.frontmatter.endMonthjob},{experience.frontmatter.yearJob}
        </time>
        <h2>
          {experience.frontmatter.role} - {experience.frontmatter.compagny}
        </h2>
        <p class="experience-description">
          {experience.frontmatter.description}
        </p>
        <div class="card-link">
          <a
            class="read-more"
            href={experience.frontmatter.compagnyLink}
            target="_blank"
          >
            {experience.frontmatter.compagnyLink}
          </a>
          <img
            width="16"
            height="16"
            class="link-icon-arrow"
            src="/icons/icon-arrow-16.png"
            alt="icon arrow"
          />
        </div>
      </article>
    ))
  }
</section>

<style lang="scss">
  #experiences {
    display: flex;
    flex-direction: column;
    row-gap: 4rem;
  }

  article {
    time,
    a.read-more {
      font-weight: 500;
      line-height: 1.5rem;
      font-size: 0.875rem;
    }

    time {
      color: var(--clr_dark_200);
      padding-inline: 1rem 0;
      border-left: 2px solid var(--clr_dark_200);
    }

    h2 {
      width: fit-content;
      font-size: 1rem;
      letter-spacing: -0.025em;
      line-height: 1.75rem;
    }

    .experience-description {
      font-size: 0.875rem;
      line-height: 1.5rem;
    }

    .card-link {
      width: fit-content;

      display: flex;
      align-items: center;
      column-gap: 0.5rem;

      position: relative;
      cursor: pointer;

      &::after {
        content: "";
        position: absolute;
        bottom: 2px;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: var(--clr_links);
        opacity: 0;
        transition: opacity 0.2s ease;
      }

      &:hover {
        &::after {
          opacity: 1;
        }
      }
    }

    a.read-more {
      color: var(--clr_links);
    }

    .link-icon-arrow {
      transform: rotate(-90deg);
    }
  }

  @media (min-width: 850px) {
    article {
      padding: 1rem;
      transition: background-color 0.2s ease-in-out;

      &:hover {
        border-radius: 1rem;
        background-color: var(--clr_bg_200);
      }
    }
  }
</style>
