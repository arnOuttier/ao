<style lang="scss">
  #intro {
    width: min(1200px, 90vw);
    margin-inline: auto;
  }

  .intro-inner {
    max-width: 42rem;
  }

  .intro-image {
    width: 100px;
    height: 100px;
    border-radius: 100%;
    background-image: url("/images/pistacheWeb.jpg");
    background-size: cover;
    background-position: center center;
  }

  h1 {
    font-size: clamp(2rem, 1.939vw + 1.545rem, 3rem);
    line-height: clamp(2.5rem, 2.0455rem + 1.9394vw, 3.5rem);
  }

  .intro-description {
    font-size: 1rem;
    line-height: 1.75rem;
  }

  .social-menu {
    display: flex;
    column-gap: 1.5rem;
    margin-block: 2rem 0;
  }

  svg {
    path {
      transition: fill 0.4s ease;
    }

    &:hover {
      path {
        fill: var(--clr_primary);
      }
    }
  }
</style>

<style lang="scss" is:global>
  :is([data-theme="dark"]) .social-menu {
    /* BUTTONS */
    svg {
      path {
        fill: #71717a;
      }

      &:hover {
        path {
          fill: var(--clr_primary);
        }
      }
    }
  }
</style>
