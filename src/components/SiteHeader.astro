<style lang="scss">
  #site-header {
    width: min(1200px, 90vw);
    margin-inline: auto;
    margin-block: 1.5rem 0;

    display: flex;
    justify-content: flex-end;
    column-gap: 0.5rem;
  }

  /* Button Toggle Mode */

  button.toggle-mode {
    width: 48px;
    height: 40px;
    border: 1px solid var(--clr_border_200);
    border-radius: 22px;
    box-shadow: rgba(39, 39, 42, 0.05) 0 4px 6px -1px;

    display: grid;
    place-items: center;

    > * {
      display: none;
    }

    .visible {
      display: block;
    }

    &:hover {
      svg {
        path {
          transition: all 0.4s ease-in-out;
        }

        &.icon-light {
          path {
            fill: var(--clr_primary);
          }
        }

        &.icon-dark {
          path {
            stroke: var(--clr_primary) !important;
          }
        }
      }
    }
  }

  /* Button Lang Toggle */

  button.lang-toggle {
    color: var(--clr_primary);
    text-decoration: underline;
  }
</style>
