<style lang="scss">
  #skills {
    padding: 1.5rem;
    border: 1px solid var(--clr_border_100);
    border-radius: 1rem;
  }

  .skills__header {
    display: flex;
    align-items: center;
    column-gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .icon-skills {
    width: 20px;
    height: 20px;
    background-image: url("icons/icon-skills.svg");
  }

  h2 {
    font-size: 0.875rem;
    line-height: 1rem;
  }

  ul {
    list-style: none;
    padding: 0;

    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(30px, 1fr));
    align-items: center;
    gap: 3rem;
  }

  li {
    max-width: 30px;

    span {
      font-size: 0.8125rem;
      font-weight: 600;
      text-align: center;
    }
  }
</style>

<style lang="scss" is:global>
  :is([data-theme="dark"]) #skills {
    li {
      span {
        color: #ffffff;
      }
    }

    /* BUTTONS */
    img {
      filter: invert(1);
    }
  }
</style>

<style lang="scss" is:global>
  :is([data-theme="dark"]) {
    .icon-skills {
      background-image: url("icons/icon-skills-white.svg");
    }
  }
</style>
