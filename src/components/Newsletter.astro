<form id="newsletter" action="/thank-you">
  <div class="newsletter__header">
    <div class="icon-newsletter"></div>
    <h2>Stay up to date</h2>
  </div>
  <p>Get notified when I publish something new, and unsubscribe at any time.</p>
  <div class="newsletter-input">
    <input
      type="email"
      placeholder="Adresse Email - DÃ©mo !"
      aria-label="Email address"
      required=""
    />
    <button disabled class="btn btn-secondary" type="submit">Join</button>
  </div>
</form>
<!-- #newsletter -->

<style lang="scss">
  #newsletter {
    padding: 1.5rem;
    border: 1px solid var(--clr_border_100);
    border-radius: 1rem;
  }

  .newsletter__header {
    display: flex;
    align-items: center;
    column-gap: 1rem;
  }

  .icon-newsletter {
    width: 20px;
    height: 20px;
    background-image: url("icons/icon-newsletter.svg");
  }

  h2 {
    font-size: 0.875rem;
    line-height: 1.5rem;
  }

  p {
    color: rgb(82, 82, 91);
    line-height: 1.5rem;
  }

  .newsletter-input {
    margin-top: 1.5rem;

    display: flex;
    column-gap: 0.5rem;
  }
</style>

<style lang="scss" is:global>
  :is([data-theme="dark"]) {
    .icon-newsletter {
      background-image: url("icons/icon-newsletter-white.svg");
    }
  }
</style>
